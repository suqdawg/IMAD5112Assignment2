<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3A3A3A"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="344dp"
        android:layout_height="106dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="165dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#00B8D4"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/welcomeTitle"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:text="Welcome to the Flashcard Quiz!"
            android:textAlignment="center"
            android:textSize="35sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/welcomeDescription"
        android:layout_width="325dp"
        android:layout_height="63dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="36dp"
        android:text="Test your knowledge with 5 True/False questions."
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView1" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="161dp"
        android:layout_height="90dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="#FFAB00"
        android:text="Start Quiz"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>
